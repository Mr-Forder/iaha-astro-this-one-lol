---
import MainNews from "../../../components/MainNews.astro";
import Standards from "../../../components/Standards.astro";
import Layout from "../../../layouts/Layout.astro";
---

<Layout>
  <section class="section hero-careers">
    <div class="w-layout-blockcontainer main-container w-container">
      <div class="headline-careers">
        <div class="careers-top-tile">
          <div class="spacer-sm"></div>
          <div class="heading-careers">
            <div class="headline-blog">
              <div class="label">Standards</div>
              <h1 class="text-h1" style="font-size: clamp(2rem, 5vw, 72px);">
                ETSI EN 300 422-4 V2.1.1 (2017-05)
              </h1>
            </div>
          </div>
        </div>

        <div class="home-b-button-wrap">
          <a href="/resources/standards" class="cta-main accent w-inline-block">
            <div class="button-animation-hide">
              <div class="button-animation-wrap">
                <div class="button-content-tile">
                  <div>Back to Standards</div>
                  <div class="button-arrow w-embed">
                    <svg
                      width="7"
                      height="10"
                      viewBox="0 0 7 10"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M1 9L5 5L1 1"
                        stroke="currentColor"
                        stroke-width="2"></path>
                    </svg>
                  </div>
                </div>
                <div class="button-content-tile">
                  <div>Back to Standards</div>
                  <div class="button-arrow w-embed">
                    <svg
                      width="7"
                      height="10"
                      viewBox="0 0 7 10"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M1 9L5 5L1 1"
                        stroke="currentColor"
                        stroke-width="2"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
        <div class="section-divider home-c-numbers"></div>
      </div>
    </div>
  </section>

  <section class="">
    <div class="w-layout-blockcontainer main-container w-container">
      <div class="w-layout-grid numbers-halves"></div>

      <div class="product-content-wrap">
        <div class="w-layout-grid product-halves">
          <div class="label"></div>
          <div class="w-richtext">
            <h3 class="no-margins">
              Wireless Microphones; Audio PMSE up to 3 GHz; Part 4
            </h3>
          </div>
        </div>
        <div class="section-divider"></div>
        <div class="w-layout-grid product-halves">
          <div class="label">Abstract</div>
          <div class="w-richtext">
            <h5 style="margin-top:3rem;">
              EN 300 422-4 specifies technical characteristics and methods of
              measurements for Assistive Listening Devices (ALDs) comprising
              personal hearing aid systems including inductive systems, personal
              sound amplifiers, and associated accessories for ALDs, e.g. remote
              controls and audio streaming devices.
            </h5>
          </div>
        </div>

        <div class="w-layout-grid product-halves">
          <div class="label"></div>
          <div class="w-richtext">
            <h5 class="no-margins">
              It applies to equipment operating on radio frequencies up to 3 GHz
              using analogue, digital and hybrid (using both analogue and
              digital) modulation.
            </h5>
          </div>
        </div>
        <div class="section-divider"></div>
      </div>

      <div class="headline-related" style="margin-top: 10rem;">
        <!-- <div class="text-h3">More Standards</div> -->
      </div>
      <Standards />
    </div>
  </section>
  <div class="spacer-sm"></div>
  <div class="spacer-sm"></div>
  <div class="spacer-sm"></div>
</Layout>
